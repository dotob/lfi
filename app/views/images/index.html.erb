<h1>Listing images</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Path</th>
    <th>Type</th>
    <th>Last change</th>
    <th>Last visit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.name %></td>
    <td><%= image.path %></td>
    <td><%= image.type %></td>
    <td><%= image.last_change %></td>
    <td><%= image.last_visit %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

